                    bsonType: "string",
                    description: "must be an alphanumeric"
                },
                Surname: {
                    bsonType: "string",
                    description: "must be an alphanumeric"
                },

                Email: {
                    bsonType: "string",
                    description: "must be an alphanumeric"
                },

                Phonenumber: {
                    bsonType: "string",
                    description: "must be a Number"
                },

                Password: {
                    bsonType: "number",
                    description: "must be an alphanumeric"
                }		
            
            }
            }

        }
    }
    }
