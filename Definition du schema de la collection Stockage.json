db.createCollection("Stockage", {
    validator: {
       $jsonSchema: {
          bsonType: "object",
          required: ["Categorie", "NamePerson"],
          properties: {
            Categorie: {
                enum: [ "PHOTO", "VIDEO" ],
                description: "must be a string and is required"
             },
             NamePerson: {
                bsonType: "string",
                description: "must be a string and is required"
             },
           }
       }
    }
 });